import xml.etree.ElementTree as ET
from collections import defaultdict

def get_dashboard_hierarchy_with_intersection(path):
    tree = ET.parse(path)
    root = tree.getroot()
    dashboards = defaultdict(dict)

    # Step 1: Collect all KPIs per worksheet
    for dashboard in root.findall(".//dashboard"):
        dash_name = (
            dashboard.attrib.get("caption")
            or dashboard.attrib.get("name")
            or "Unnamed Dashboard"
        )

        for zone in dashboard.findall(".//zone"):
            ws_name = zone.attrib.get("name")
            if not ws_name:
                continue

            dashboards[dash_name][ws_name] = []
            worksheets = root.findall(f".//worksheet[@name='{ws_name}']")

            for ws in worksheets:
                for col in ws.findall(".//column"):
                    # Extract KPI name
                    kpi_name = col.attrib.get("caption") or col.attrib.get("name")
                    if not kpi_name or kpi_name.strip() == "":
                        continue

                    # If calculated, append formula
                    calc = col.find("calculation")
                    if calc is not None:
                        formula = calc.attrib.get("formula")
                        if formula:
                            kpi_name = f"{kpi_name} ({formula})"

                    if kpi_name not in dashboards[dash_name][ws_name]:
                        dashboards[dash_name][ws_name].append(kpi_name)

    # Step 2: Get intersection of KPIs across all worksheets in each dashboard
    final_output = {}
    for dash_name, ws_dict in dashboards.items():
        all_kpis = [set(kpis) for kpis in ws_dict.values() if kpis]
        if not all_kpis:
            continue
        common_kpis = set.intersection(*all_kpis) if len(all_kpis) > 1 else all_kpis[0]
        final_output[dash_name] = sorted(list(common_kpis))

    return final_output